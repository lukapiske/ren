<h2>A3 reports file</h2>




<table class="mytable">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Size</th>
    <th>Type</th>
    <th>Report for</th>
    <th>Date created</th>
    <th>Actions</th>
  </tr>

  <% @a3_reports.each do |report| %>
    <tr class="<%= cycle('', 'bg') %>">
      <td><%=h report.id %></td>
      <td><%=h report.excelfiles_file_name %></td>
      <td><%=h report.excelfiles_file_size %></td>
      <td><%=h report.excelfiles_content_type %></td>
      <td><%= report.date %></td>
      <td> <%=h report.created_at.strftime('%d %B %Y') %></td>
      <% if permitted_to? :show %>
      <td> <%= link_to 'Data', :controller => 'admin/renault/scaffold/a3reports', :action => 'index', :object => report %>
      <% end  %>
      <% if permitted_to? :destroy %>
        <%= link_to 'Destroy', [ report ], :confirm => 'Are you sure?', :method => :delete %></td>
      <% end  %>
    </tr>
  <% end %>
</table>

<br />
<% if permitted_to? :create %>
  <div id="aside" class="box">
    <p id="btn-create" class="box">
      <%= link_to '<span>New A3 report file</span>', new_admin_renault_a3_report_path %>
    </p>
  </div>

<% end %>
<br />
<%= will_paginate @a3_report %>