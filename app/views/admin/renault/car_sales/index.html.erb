<h2>Car sales files</h2>




<table class="mytable">
  <tr>
    <th>ID</th>
    <th>Name</th>
    <th>Size</th>
    <th>Type</th>
    <th>Report for</th>
    <th>Date created</th>
    <th>Actions</th>
  </tr>

  <% @car_sales.each do |sales| %>
    <tr class="<%= cycle('', 'bg') %>">
      <td><%=h sales.id %></td>
      <td><%=h sales.excelfiles_file_name %></td>
      <td><%=h sales.excelfiles_file_size %></td>
      <td><%=h sales.excelfiles_content_type %></td>
      <td><%= sales.date %></td>
      <td> <%=h sales.created_at.strftime('%d %B %Y') %></td>
      <% if permitted_to? :show %>
      <td> <%= link_to 'Data', :controller => 'admin/renault/scaffold/carsales', :action => 'index', :object => sales %>
      <% end  %>
      <% if permitted_to? :destroy %>
        <%= link_to 'Destroy', [ sales ], :confirm => 'Are you sure?', :method => :delete %></td>
      <% end  %>
    </tr>
  <% end %>
</table>

<br />
<% if permitted_to? :create %>

  <div id="aside" class="box">
    <p id="btn-create" class="box">
      <%= link_to '<span>New car sales file</span>', new_admin_renault_car_sale_path %>
    </p>
  </div>
<% end %>
<br />
<%= will_paginate @car_sales %>