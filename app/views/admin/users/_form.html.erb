<% form_for [ @user ]  do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </p>
  <p>
    <%= f.label :email, "Email Address" %><br />
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %><br />
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation, "Confirm Password" %><br />
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
 <%=  select("role", "id", Admin::Role.all.map {|u| [u.name,u.id]}) %>
    <%#= f.label :roles %><br />
    <%# for role in Admin::Role.all %>
      <%#= check_box_tag "admin_user[role_ids][]", role.id %>
      <%#= h role.name %><br />
    <%# end %>

  </p>
  <p><%= f.submit "Sign up" %></p>
<% end %>
